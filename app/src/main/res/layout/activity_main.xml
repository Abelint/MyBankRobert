<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Верхняя часть: Календарь -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCalendar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <!-- Разделитель -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#DADADA"
        app:layout_constraintTop_toBottomOf="@id/cardCalendar"
        app:layout_constraintBottom_toTopOf="@id/bottomBlock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Нижняя часть: диаграммы + описание -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomBlock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Левая часть: 3 кольцевые "диаграммы" -->
            <!-- Это визуальная заглушка: три кольца (stroke) друг внутри друга -->
            <!-- Реальные проценты можно сделать позже (Canvas / MPAndroidChart). -->
            <com.robert.mybank.RingsChartView
                android:id="@+id/ringsChart"
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />


            <!-- Правая часть: легенда -->
            <LinearLayout
                android:id="@+id/legend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ringsChart"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Пункт легенды 1 -->
                <!-- Пункт легенды 1 (outer = красный = расход) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/legend_dot_outer" />

                    <TextView
                        android:id="@+id/tvLegendOuter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Расход: 0/0"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Пункт легенды 2 (middle = зелёный = доход) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/legend_dot_middle" />

                    <TextView
                        android:id="@+id/tvLegendMiddle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Доход: 0/0"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Пункт легенды 3 (inner = синий = накопление) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:background="@drawable/legend_dot_inner" />

                    <TextView
                        android:id="@+id/tvLegendInner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="Накопление: 0/0"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
